<body>
  <h1>Editing Book</h1>
  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
    <div class="titlearea">
      <label for="titlename">Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="bodyarea">
      <label for="bodyarea">Body</label>
      <%= f.text_area :body %>
    </div>

    <div class="button">
      <%= f.submit 'Update Book' %>
    </div>
    <%= link_to 'Show', show_book_url(@book.id) %>
    |
    <%= link_to 'Back', books_path %>
  <% end %>
</body>