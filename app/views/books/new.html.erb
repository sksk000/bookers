<h2>New Book</h2>
<%= form_with model: @book, url: '/books',method: :post do |f| %>
<div class="noticetext">
  <% if @error_count > 0 %>
    <%= @error_count %>errors prohibited this book from being saved:
      <ul>
        <% @error_msgs.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
</div>

<div class="titlearea">
  <label for="titlename">Title</label>
  <%= f.text_field :title %>
</div>

<div class="bodyarea">
  <label for="bodyname">Body</label>
  <%= f.text_area :body %>
</div>

<div class="button">
  <%= f.submit 'Create Book' %>
</div>
<% end %>

